<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@200&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/assets/css/student.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cherry+Bomb+One&display=swap" rel="stylesheet">
    <title>
        <%= title%>
    </title>
</head>
<body>
    <div class="student-page-container">

        <div class="topbar">
            <div class="logo">
                <span class="logo-first">C</span>AREERLAND
            </div>

            <div class="employee-part">
                <!-- Notification -->
                <img src="/assets/images/icons/bell.png" alt="" class="top-bar-icons ">
                <!-- Calendar -->
                <img src="/assets/images/icons/calendar.png" alt="" class="top-bar-icons ">
                <!-- Employee Pic/ Name on Hover -->
                <img src="/assets/images/icons/graduates.png" alt="" class="top-bar-icons ">

            </div>
        </div>

        <div class="add-student-container">
            <div class="employee-navbar">
                <div class="employee">
                    <img src="/assets/images/anime-boy.jpeg" alt="">
                    <span class="employee-name">
                        <%= name %>
                    </span>
                    <span class="employee-designation">SDE-I</span>
                    <span class="employee-company">@Coding Ninjas</span>
                </div>
    
                <ul class="nav">
                    <li class="nav-items">
                       <a href="/employee/dashboard">
                        <img src="/assets/images/icons/dashboard.png" alt="" class="nav-icon">
                         Dashboard
                       </a>
                    </li>
                    <li class="nav-items">
                        <a href="/employee/students-page">
                            <img src="/assets/images/icons/graduates.png" alt="" class="nav-icon">
                        Students
                        </a>
                    </li>
                    <li class="nav-items">
                        <a href="/employee/companies-page">
                            <img src="/assets/images/icons/buildings.png" alt="" class="nav-icon">
    
                        Companies
                        </a>
                    </li>
                    <li class="nav-items">
                        <a href="/employee/interviews-page">
                            <img src="/assets/images/icons/cogwheel.png" alt="" class="nav-icon">

                        Interview
                        </a>
                    </li>
                    <li class="nav-items">
                        <a href="/employee/mails">
                            <img src="/assets/images/icons/mail.png" alt="" class="nav-icon">
    
                        Messages
                        </a>
                    </li>
                    <li class="nav-items">
                        <a href="/employee/settings">
                            <img src="/assets/images/icons/cogwheel.png" alt="" class="nav-icon">
    
                        Settings
                        </a>
                    </li>
                </ul>
    
                <a href="/employee/sign-out" class="log-out">
                    <img src="/assets/images/icons/logout.png" alt="" class="log-out-icon">
                    Log out
                </a>
            </div>

            <div class="students-list-container">
                <div class="add-student">
                    Add a Student
                </div>

                <ul class="students-box">
                    <% for(let student of students) {%>
                        <li class="student-container">
                            <div class="student-pic">
                                <img src="/assets/images/anime-boy.jpeg" alt="">
                            </div>
                    
                            <div class="student-details">
                                <h3 class="student-name">
                                    <%= student.name %>
                                </h3>
                                <p class="student-age">Age: <%= student.age %></p>
                                <p class="student-batch">Batch: <%= student.batch %></p>
                            </div>
                            
                        </li>
                        <% } %>

                    
                </ul>
            </div>
        </div>
    </div>

    <div class="student-form-container">
        <h1>Create Student Form</h1>
  
        <form
          action="/employee/students-page/create-student"
          method="post"
          class="student-form"
        >
  
        <i class="bi bi-x-lg"></i>
          <h3>Personal Details</h3>
          <div class="form-data">
            <label for="name" class="form-label">Name: </label>
            <input type="text" name="name" placeholder="Joe Biden" />
          </div>
          <div class="form-data">
              <label for="name" class="form-label">Gender: </label>
              <input type="radio" id="male" name="gender" value="male" class="">
              <label for="male" class="small-label">Male</label>
              
              <input type="radio" id="female" name="gender" value="female" class="">
              <label for="female" class="small-label">Female</label>
          </div>
          <div class="form-data">
              <label for="dob" class="form-label">Date of Birth:</label>
              <input type="date" name="dob">
  
            <label for="age" class="small-label">Age: </label>
            <input type="number" name="age" placeholder="99" max="50" min="15"/>
          </div>
          <h3>Academic Details</h3>
          <div class="form-data">
            <label for="college" class="form-label">College: </label>
            <input type="text" name="college" placeholder="IIT" />
          </div>
          <div class="form-data">
            <label for="batch" class="form-label">Batch: </label>
            <input type="number" name="batch" placeholder="2020" />
          </div>
          <div class="form-data">
            <label for="dsa-score" class="form-label">DSA-Score: </label>
            <input
              type="number"
              name="dsaScore"
              placeholder="Score out of 100"
            />
          </div>
          <div class="form-data">
            <label for="webD-score" class="form-label">WebD-Score: </label>
            <input
              type="number"
              name="webDScore"
              placeholder="Score out of 100"
            />
          </div>
          <div class="form-data">
            <label for="reactScore" class="form-label">React-Score: </label>
            <input
              type="number"
              name="reactScore"
              placeholder="Score out of 100"
            />
          </div>
  
          <button type="submit" class="create-student-btn">Create Student</button>
        </form>
      </div>

      <script src="/assets/js/student.js"></script>
</body>
</html>