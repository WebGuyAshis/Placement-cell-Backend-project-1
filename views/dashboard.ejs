<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- Google Fonts -->
    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Varela+Round&display=swap" rel="stylesheet">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Cherry+Bomb+One&display=swap" rel="stylesheet">
    
    <!-- Bootstrap icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    <!-- Custom Css -->
    <link rel="stylesheet" href="/assets/css/dashboard.css">
    <title>
        <%= title%>
    </title>
</head>

<body>
    <div class="dashboard-container">
        <!-- Logo -->
        <div class="topbar">
            <div class="logo">
                <span class="logo-first">C</span>AREERLAND
            </div>

            <div class="employee-part">
                <!-- Notification -->
                <img src="/assets/images/icons/bell.png" alt="" class="top-bar-icons ">
                <!-- Calendar -->
                <img src="/assets/images/icons/calendar.png" alt="" class="top-bar-icons ">
                <!-- Employee Pic/ Name on Hover -->
                <img src="/assets/images/icons/graduates.png" alt="" class="top-bar-icons ">

            </div>
        </div>



        <div class="employee-section">
            <div class="employee-navbar">
                <div class="employee">
                    <img src="/assets/images/anime-boy.jpeg" alt="">
                    <span class="employee-name">
                        <%= name %>
                    </span>
                    <span class="employee-designation">SDE-I</span>
                    <span class="employee-company">@Coding Ninjas</span>
                </div>

                <ul class="nav">
                    <li class="nav-items">
                       <a href="/employee/dashboard">
                        <img src="/assets/images/icons/dashboard.png" alt="" class="nav-icon">
                         Dashboard
                       </a>
                    </li>
                    <li class="nav-items">
                        <a href="/employee/students-page">
                            <img src="/assets/images/icons/graduates.png" alt="" class="nav-icon">
                        Students
                        </a>
                    </li>
                    <li class="nav-items">
                        <a href="/employee/companies-page">
                            <img src="/assets/images/icons/buildings.png" alt="" class="nav-icon">

                        Companies
                        </a>
                    </li>
                    <li class="nav-items">
                        <a href="/employee/mail">
                            <img src="/assets/images/icons/mail.png" alt="" class="nav-icon">

                        Messages
                        </a>
                    </li>
                    <li class="nav-items">
                        <a href="/employee/settings">
                            <img src="/assets/images/icons/cogwheel.png" alt="" class="nav-icon">

                        Settings
                        </a>
                    </li>
                </ul>

                <a href="/employee/sign-out" class="log-out">
                    <img src="/assets/images/icons/logout.png" alt="" class="log-out-icon">
                    Log out
                </a>
            </div>


            <div class="employee-dashboard">
                <!-- Greet To Employee -->
                <div class="greet-employee">
                    Good Evening,
                    <p>
                        <%= name %>
                    </p>
                </div>

                <div class="tasks-card">
                    <a href="/employee/students-page" class="add-student box">
                        Students
                        <i class="bi bi-arrow-right-circle-fill"></i>
                    </a>
    
                    <a href="/employee/companies-page" class="add-comapny box">
                        Interview
                        <i class="bi bi-arrow-right-circle-fill"></i>
                    </a>
                </div>
            </div>

            <div class="recently-placed-container">
                <h3>Recently Placed</h3>
            <ul class="recently-placed">
                <li class="recently-placed-student">
                    <img class="profile-pic" src="/assets/images/anime-boy.jpeg" alt="">
                    <div class="student-card">
                        <h5>Ashis Yadav</h5>
                        <span class="work-company">Coding Ninjas</span>
                    </div>
                        <img class="msg" src="/assets/images/icons/chat.png" alt="">
                </li>
            </ul>
        </div>
        </div>
    </div>
</body>

</html>